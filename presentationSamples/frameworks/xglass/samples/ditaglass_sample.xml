<?xml version="1.0" encoding="UTF-8"?>
<xglass>
    <definitions>
        <urns>
            <urn name="files" path="resources"/>
            <urn name="processors" path="processors">
                <urn name="md" path="pagedown"/>
                <urn path="jars" name="jars"/>
            </urn>
            <urn name="crex" path="file:/C:/Program%20Files/Oxygen%20XML%20Editor%2017/plugins/crex"/>
        </urns>
    </definitions>
    <conversions>
        <conversion protocol="excel2dita">
            <comment>converts Microsoft Excel documents to DITA</comment>
            <read>
                <excel>
                    <sheet>sample</sheet>
                </excel>
                <xslt>
                    <stylesheet urn="processors">excel2d.xsl</stylesheet>
                </xslt>
            </read>
        </conversion>
        <conversion protocol="html2dita">
            <comment>converts HTML documents to DITA</comment>
            <read>
                <xhtml/>
                <xslt>
                    <stylesheet urn="processors">h2d.xsl</stylesheet>
                </xslt>
            </read>
        </conversion>
        <conversion protocol="md2dita">
            <comment>converts markdown to DITA</comment>
            <read>
                <js>
                    <script urn="processors">pagedown%2FMarkdown.Converter.js</script>
                    <method>convertExternal</method>
                </js>
                <xhtml/>
                <xslt>
                    <stylesheet urn="processors">h2d.xsl</stylesheet>
                </xslt>
            </read>
        </conversion>
        <conversion protocol="xsd2dita">
            <read>
                <xslt>
                    <stylesheet urn="processors">xsdToTopic.xsl</stylesheet>
                </xslt>
            </read>
        </conversion>
        <conversion protocol="javadoc2dita">
            <read>
                <xhtml/>
                <xslt>
                    <stylesheet urn="processors">javaDocToTopic.xsl</stylesheet>
                </xslt>
            </read>
        </conversion>
        <conversion protocol="javadoc2ditamap">
            <read>
                <xhtml/>
                <xslt>
                    <stylesheet urn="processors">javaDocToMap.xsl</stylesheet>
                </xslt>
            </read>
        </conversion>
        <conversion protocol="java2dita">
            <read>
                <java>
                    <jars>
                        <dir urn="processors:jars"/>
                    </jars>
                    <class>j.to.xml.JavaToXML</class>
                </java>
                <xslt>
                    <stylesheet urn="processors">javaToTopic.xsl</stylesheet>
                </xslt>
            </read>
        </conversion>
        <conversion protocol="gs2dita">
            <read>
                <xhtml/>
                <xslt>
                    <stylesheet urn="processors">googleSheets2dita.xsl</stylesheet>
                </xslt>
                <xslt>
                    <stylesheet urn="processors">h2d.xsl</stylesheet>
                </xslt>
            </read>
        </conversion>
        <conversion protocol="md2html">
            <comment>converts markdown to DITA</comment>
            <read>
                <js>
                    <script urn="processors">pagedown%2FMarkdown.Converter.js</script>
                    <method>convertExternal</method>
                </js>
                <xhtml/>
            </read>
        </conversion>
        <conversion protocol="csv2dita">
            <comment>converts CSV 2 DITA and back</comment>
            <read>
                <wrap>
                    <roottag>wrapper</roottag>
                    <encoding>UTF8</encoding>
                </wrap>
                <xslt>
                    <stylesheet urn="processors">csvtext2dita.xsl</stylesheet>
                </xslt>
            </read>
            <write>
                <xslt>
                    <stylesheet urn="processors">dita2csv.xsl</stylesheet>
                </xslt>
            </write>
        </conversion>
        <conversion protocol="rocsv2dita">
            <comment>converts CSV to DITA</comment>
            <read>
                <wrap>
                    <roottag>wrapper</roottag>
                    <encoding>UTF8</encoding>
                </wrap>
                <xslt>
                    <stylesheet urn="processors">csvtext2dita.xsl</stylesheet>
                </xslt>
            </read>
        </conversion>
        <conversion protocol="docx2dita">
            <read>
                <java>
                    <jars>
                        <dir urn="crex"/>
                    </jars>
                    <class>crex.net.clients.oxygen.processor.CrexProcessor</class>
                    <parameters>
                        <parameter name="userName">[yourusername]</parameter>
                        <parameter name="userPassword">[yourpassword]</parameter>
                        <parameter name="xBotProfile">Tracom</parameter>
                        <parameter name="conversionType">docx2DITATopic</parameter>
                        <parameter name="expectedFileExtension">.dita</parameter>
                    </parameters>
                </java>
            </read>
            <write>
                <java>
                    <jars>
                        <dir urn="crex"/>
                    </jars>
                    <class>crex.net.clients.oxygen.processor.CrexProcessor</class>
                    <parameters>
                        <parameter name="userName">[yourusername]</parameter>
                        <parameter name="userPassword">[yourpassword]</parameter>
                        <parameter name="xBotProfile">Tracom</parameter>
                        <parameter name="conversionType">DITATopic2docx</parameter>
                        <parameter name="inExtension">.dita</parameter>
                        <parameter name="expectedFileExtension">.docx</parameter>
                    </parameters>
                </java>
            </write>
        </conversion>
        <conversion protocol="tempJson">
            <read>
                <json/>
            </read>
            <write>
                <json/>
            </write>
        </conversion>
        <conversion protocol="tempXQuery">
            <read>
                <xquery>
                    <script urn="processors">convert.xquery.xsl</script>
                    <parameters>
                        <parameter name="p1">v1</parameter>
                    </parameters>                
                </xquery>
            </read>
            <write>
                <xquery>
                    <script urn="processors">convert.xquery.xsl</script>
                    <parameters>
                        <parameter name="p1">v1</parameter>
                    </parameters>                
                </xquery>
                <xquery>
                    <script/>
                </xquery>
            </write>
        </conversion>
    </conversions>
</xglass>
